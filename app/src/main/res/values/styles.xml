<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">@dimen/dimen_4</item>
        <item name="android:paddingBottom">?android:actionBarSize</item>
    </style>

    <style name="MoviesImageView">
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
        <item name="android:layout_marginLeft">@dimen/dimen_16</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:background">@color/cardViewColor</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_margin">@dimen/dimen_4</item>
        <item name="cardCornerRadius">@dimen/dimen_8</item>
        <item name="cardBackgroundColor">@color/cardViewColor</item>
        <item name="cardElevation">@dimen/dimen_6</item>
    </style>

    <style name="MoviesTitle">
        <item name="android:layout_marginLeft">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginRight">@dimen/dimen_8</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MoviesSubtitle">
        <item name="android:layout_marginLeft">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MoviesPriceAvailability">
        <item name="android:layout_marginLeft">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>